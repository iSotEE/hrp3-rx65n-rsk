#
#		Makefileのターゲット依存部
#		（CT11MPcore上でのシステム時刻管理機能テスト用）
#
#  $Id: Makefile.target 525 2018-11-04 13:12:59Z ertl-hiro $
# 

#
#  システム名，チップ名，コア名，開発環境名の定義
#
SYS = ct11mpcore
CHIP = mpcore
CORE = arm
TOOL = gcc

#
#  このターゲット依存部ではct11mpcore_gccと異なるファイルのみを用意する
#
TARGETDIR2 = $(SRCDIR)/target/ct11mpcore_gcc
TARGET_KERNEL_TRB = $(TARGETDIR2)/target_kernel.trb
TARGET_OPT_TRB = $(TARGETDIR2)/target_opt.trb
TARGET_MEM_TRB = $(TARGETDIR2)/target_mem.trb
TARGET_CHECK_TRB = $(TARGETDIR2)/target_check.trb
TARGET_KERNEL_CFG = $(TARGETDIR2)/target_kernel.cfg

#
#  QEMUに関する定義
#
#  QEMU上で実行する場合には，TOPPERS_USE_QEMUをマクロ定義する．QEMUの
#  Semihostingを使わない場合には，TOPPERS_OMIT_QEMU_SEMIHOSTINGをマクロ
#  定義する．Semihostingを使う場合には，QEMUの起動時に，-semihostingオ
#  プションをつけることが必要である．
#
#COPTS := $(COPTS) -DTOPPERS_USE_QEMU
#COPTS := $(COPTS) -DTOPPERS_OMIT_QEMU_SEMIHOSTING

#
#  MPCoreの種類の定義
#
MPCORE_TYPE = ARM11

#
#  各セグメントの開始アドレスの定義
#
TEXT_START_ADDRESS=0x01000000
DATA_START_ADDRESS=0x01800000

#
#  コンパイルオプション
#
INCLUDES := $(INCLUDES) -I$(TARGETDIR) -I$(TARGETDIR2)
COPTS := $(COPTS) -mlittle-endian
LDFLAGS := $(LDFLAGS) -mlittle-endian

#
#  カーネルに関する定義
#
KERNEL_DIRS := $(KERNEL_DIRS) $(TARGETDIR) $(TARGETDIR2)
KERNEL_COBJS := $(KERNEL_COBJS) target_kernel_impl.o target_timer.o

#
#  システムサービスに関する定義
#
SYSSVC_DIRS := $(SYSSVC_DIRS) $(SRCDIR)/arch/arm_gcc/common
SYSSVC_COBJS := $(SYSSVC_COBJS)

#
#  トレースログ記録のサンプルコードに関する定義
#
ifdef ENABLE_TRACE
	COPTS := $(COPTS) -DTOPPERS_ENABLE_TRACE
	SYSSVC_DIRS := $(SYSSVC_DIRS) $(SRCDIR)/arch/tracelog
endif

#
#  チップ依存部
#
include $(SRCDIR)/arch/arm_gcc/mpcore/Makefile.chip
